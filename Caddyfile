{
	email {env.CADDY_EMAIL}
	admin off
	on_demand_tls {
		ask http://ask:8080/allow
	}
	# Enable Prometheus metrics
	metrics
}

:80 {
	redir https://{host}{uri}
}

:443 {
	root * /srv/sites/{host}
	encode zstd gzip

	# Handle PHP files
	php_fastcgi php-fpm:9000

	# Serve static files
	file_server

	# Handle SPA routing - redirect non-existing resources to index.html
	handle {
		@notFound {
			not path *.php
			not path *.css
			not path *.js
			not path *.png
			not path *.jpg
			not path *.jpeg
			not path *.gif
			not path *.svg
			not path *.ico
			not path *.woff
			not path *.woff2
			not path *.ttf
			not path *.eot
			not path *.pdf
			not path *.zip
			not path *.txt
			not path *.xml
			not path *.json
		}
		rewrite @notFound /index.php
		file_server
	}

	tls {
		on_demand
	}
	header {
		Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
		X-Content-Type-Options "nosniff"
		X-Frame-Options "DENY"
		X-XSS-Protection "1; mode=block"
		Referrer-Policy "strict-origin-when-cross-origin"
		Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=()"
		Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://www.gstatic.com https://static.cloudflareinsights.com; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; img-src 'self' data: https:; font-src 'self' data: https://cdnjs.cloudflare.com; connect-src 'self' https://cdnjs.cloudflare.com https://www.gstatic.com https://static.cloudflareinsights.com https://cloudflareinsights.com"
		Cache-Control "public, max-age=3600"
		Vary "Accept-Encoding"
	}
}

# Prometheus metrics endpoint (internal only)
# SECURITY: This endpoint should be restricted to internal networks only
# Authentication is required for metrics access
:2019/metrics {
	basicauth {
		metrics_user $apr1$vkLD8Hlv$BXSln29nvlVFw0gvE7MkE.
	}
	metrics
	respond /health 200
}
